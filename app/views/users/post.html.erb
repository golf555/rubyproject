<html>
<head></head>
<body>
 <h1>Here's post: </h1>
 <hr />
 <h3><%= @post.first.title %></h3>
 <p>
 <%= @post.first.postbody %><br /><br />
 <i><small><%= @post.first.author %> at <%= @post.first.created_at %></small></i>
 </p>
 <hr />
 <p><h2>Create new comment:</h2></p>
 <%= form_tag(:controller => "users", :action => "create_comment", :postid => @post.first.id, :id_user_comment => @own_user) do %>
 <p>Message: <%= text_field_tag(:bodycomment) %></p>
 <%= submit_tag("Comment") %>
 <% end %>
 <hr />
 <% if @comm != nil %>
 <% for com in @comm -%>
 <p>
 <b><%= com.name %><br /></b>
 <%= com.bodycomment %><br />
 <i><small>at <%= com.created_at %></small></i>
 </p>
 <hr />
 <% end %>
 <% end %>
 </body>
</html>